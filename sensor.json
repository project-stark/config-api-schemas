{
  "": "https://json-schema.org/schema#",
  "id": "/sensor.json",
  "type": "object",
  "name": "sensor",
  "required": [
    "state_topic"
  ],
  "properties": {
    "name": {
      "type": "string",
      "default": "MQTT Sensor"
    },
    "state_topic": {
      "type": "string"
    },
    "qos": {
      "type": "integer",
      "enum": [
        0,
        1,
        2
      ]
    },
    "unit_of_measurement": {
      "type": "string"
    },
    "value_template": {
      "type": "string"
    }
  }
}
